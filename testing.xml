<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="API Test Suite" parallel="classes" thread-count="2">

    <listeners>
        <!-- Allure TestNG Listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg" />
    </listeners>

    <test name="Cucumber API Tests">
        <classes>
            <!-- Specify the TestNG runner class for Cucumber -->
            <class name="tests.runners.TestRunner" />
        </classes>
    </test>

</suite>
